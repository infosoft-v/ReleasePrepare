		"Описание": "Рефакторинг операции присваивания",
		"Шаблон": "[\\s]+=[\\s]+",
		"ЗаменитьНа": " = "
	},
	"КонцевыеПробелы": {
		"Описание": "Удаление концевых пробелов",
		"Шаблон": "[ \t]*$",
		"ЗаменитьНа": ""
	},
	"_ПустыеСтроки": {
		"Описание": "Убираем пустые строки",
		"Шаблон": "\n{2,}",
		"ЗаменитьНа": "\n"
	},
	"ПромежуткиМеждуФункциями": {
		"Описание": "Промежутки между функциями (методами) - одна пустая строка",
		"Шаблон": "(?<=Конец(Функции)|(Процедуры))\\s*(?=(Функция|Процедура|&На))",
		"ЗаменитьНа": "\n\n"
	}
}
